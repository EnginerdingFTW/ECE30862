import java.awt.*;
import java.awt.Dimension;
import java.awt.event.*;
import javax.swing.*;


public class FullScreenFrame extends JFrame {
	
	private JPanel drawingPanel;
	private JButton btnExit;
	private Image background;
	
	public FullScreenFrame(GraphicsConfiguration gd)
	{
		//GraphicsDevice gd = GraphicsEnvironment.getLocalGraphicsEnvironment().getDefaultScreenDevice();
		super(gd);
		createWindow();
		addKeyBindings();
		setUndecorated(true);
	}
	
	private void addKeyBindings()
	{
		int condition = JPanel.WHEN_IN_FOCUSED_WINDOW;
		InputMap inputMap = drawingPanel.getInputMap(condition);
		ActionMap actionMap = drawingPanel.getActionMap();
		
		boolean released = false;
		KeyStroke rightArrowPressed = KeyStroke.getKeyStroke(KeyEvent.VK_RIGHT, 0, released);
		String rightArrowPressedString = "right arrow pressed";
		inputMap.put(rightArrowPressed, rightArrowPressedString);
		actionMap.put(rightArrowPressedString, new AbstractAction() {
			@Override
			public void actionPerformed(ActionEvent arg0) {
				System.out.println("right arrow pressed");
			}
		});
		
		released = true;
		KeyStroke rightArrowReleased = KeyStroke.getKeyStroke(KeyEvent.VK_RIGHT, 0, released);
		String rightArrowReleasedString = "right arrow Released";
		inputMap.put(rightArrowReleased, rightArrowReleasedString);
		actionMap.put(rightArrowReleasedString, new AbstractAction() {
			@Override
			public void actionPerformed(ActionEvent arg0) {
				System.out.println("right arrow pressed");
			}
		});
	}
}
