
public class Amunition {

    private class FireRound extends java.util.TimerTask
    {
	    public void run()
	    {
	    	System.out.println("I'M FIRING MY LASER! RAWRRRRRRRR");
	    	//create ammo with velocity
	    	try
	    	{
	    		Thread.sleep((long) FIRE_RATE * 1000);
	    	}
	    	catch (Exception e)
	    	{
	    		
	    	}
	    	canShoot = true;
	    	
	    }
    }
	
	
}
